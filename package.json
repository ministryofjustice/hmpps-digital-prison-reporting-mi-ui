{
  "name": "hmpps-digital-prison-reporting-mi-ui",
  "version": "0.0.1",
  "description": "Digital Prison Reporting MI UI",
  "repository": "git@github.com:ministryofjustice/hmpps-digital-prison-reporting-mi-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc && tsc -p cypress-tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist build node_modules stylesheets",
    "acceptance-test": "cypress run --config-file cypress-tests/acceptance-tests/cypress.config.js"
  },
  "engines": {
    "node": "^22",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}",
      "!server/(authentication|middleware|monitoring)/**/*.{ts,js,jsx,mjs}",
      "!server/app.ts",
      "!server/data/(rest|redis)Client.ts"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "@ministryofjustice/frontend": "^5.1.3",
    "@ministryofjustice/hmpps-digital-prison-reporting-frontend": "^4.6.3",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.2",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "chokidar": "^3.6.0",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "csrf-sync": "^4.2.1",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "express-prom-bundle": "^7.0.0",
    "express-session": "^1.18.1",
    "glob": "^11.0.1",
    "govuk-frontend": "^5.10.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^3.1.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "prom-client": "^15.1.2",
    "redis": "^4.6.11",
    "superagent": "^10.1.1",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.6.1",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.8",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cookie-session": "^2.0.49",
    "@types/csurf": "^1.11.3",
    "@types/express-session": "^1.18.2",
    "@types/fs-extra": "^11.0.4",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/nunjucks": "^3.2.3",
    "@types/nunjucks-date": "^0.0.10",
    "@types/parseurl": "^1.3.3",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.12",
    "@types/qs": "^6.9.17",
    "@types/querystringify": "^2.0.2",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "audit-ci": "^7.1.0",
    "axe-core": "^4.10.2",
    "concurrently": "^9.1.2",
    "cookie-session": "^2.0.0",
    "cypress": "^13.17.0",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^2.0.4",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.6.4",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^16.1.2",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.5",
    "node-html-parser": "^6.1.12",
    "openapi-typescript": "^7.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.89.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "semver": "^7.5.3",
    "optionator": "^0.9.3",
    "tough-cookie": "^4.1.3"
  }
}
